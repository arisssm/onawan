<%- include('../components/head.ejs') %>
    <div class="container-fluid">
        <div class="row-cols-1 mb-4">
            <h1 class="h3 mb-0 text-gray-800">Aviation</h1>
        </div>
        <div class="row-cols-1">
            <% if (alert.message != '') { %>
                <div class="alert alert-<%= alert.status %>" role="alert">
                    <%- alert.status == 'success' ? `<i class="fas fa-check-square mr-2"></i>`: `<i class="fas fa-exclamation-triangle"></i>` %> 
                    <%= alert.message %>
                </div>
            <% } %>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header py-3 ch">
                <div class="row d-flex">
                    <div class="col-8">
                        <h6 class="m-0 font-weight-normal text-white">List Flight</h6>
                    </div>
                    <div class="col-3 text-right">
                        <form action="/admin/search-flight" method="get">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control bg-light" name="document" placeholder="search document" autocomplete="off" required>
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-sm btn-info" id="searchFlight"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-1 text-right">
                        <button type="button" class="btn btn-sm btn-warning" data-toggle="modal" data-target="#createFlight">
                        <i class="fas fa-plus-circle fa-sm text-white"></i> Create Data
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Airline</th>
                                <th>Departure Time</th>
                                <th>Arrival Time</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( let i = 0; i < flight.length; i++ ) { %>
                                <tr>
                                    <td><%= i+1 %></td>
                                    <td><%= flight[i].airlineName %></td>
                                    <td><%= flight[i].departureTime %></td>
                                    <td><%= flight[i].arrivalTime %></td>
                                    <td><span class="text-danger">IDR </span><%= flight[i].price %></td>
                                    <td>
                                        <button type="button" class="btn btn-sm cbg text-white btn-edit"
                                        data-id = "<%= flight[i]._id %>"
                                        data-airline_flight = "<%= flight[i].airlineName %>"
                                        data-dt_flight = "<%= flight[i].departureTime %>"
                                        data-at_flight = "<%= flight[i].arrivalTime %>"
                                        data-ic_flight = "<%= flight[i].icon %>"
                                        data-price_flight = "<%= flight[i].price %>"
                                        data-duration_flight = "<%= flight[i].duration %>"
                                        data-capacity_flight = "<%= flight[i].capacity %>"
                                        data-classFlight = "<%= flight[i].flightClass %>"
                                        data-number_flight = "<%= flight[i].flightNumber %>"
                                        data-typeFlight = "<%= flight[i].flightType %>"

                                        <% for (let a = 0; a < flight[i].airportId.length; a++) { %>
                                            <% if (flight[i].airportId[a].category === 'departure') { %>
                                                data-departure_city = "<%= flight[i].airportId[a].city %>"
                                                data-departure_citycode = "<%= flight[i].airportId[a].code %>"
                                                data-departure_airport = "<%= flight[i].airportId[a].airport %>"
                                            <% } %>
                                        <% } %> 
                                        <% for (let a = 0; a < flight[i].airportId.length; a++) { %>
                                            <% if (flight[i].airportId[a].category === 'arrival') { %>
                                                data-arrival_city = "<%= flight[i].airportId[a].city %>"
                                                data-arrival_citycode = "<%= flight[i].airportId[a].code %>"
                                                data-arrival_airport = "<%= flight[i].airportId[a].airport %>"
                                            <% } %>
                                        <% } %> 
                                        >
                                            <i class="fa fa-edit"></i>
                                            Edit
                                        </button>
                                        <button type="button" class="btn btn-sm btn-info my-1 btn-detail"
                                        >
                                            <i class="fas fa-rocket"></i>
                                            Detail
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger btn-delete"
                                        data-id = "<%= flight[i]._id %>"
                                        >
                                            <i class="fa fa-trash"></i>
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                                <tr class="airport-detail" style="display: none;">
                                    <td colspan="9">
                                        <div class="row p-2">
                                            <img src="/images/<%= flight[i].icon %>" alt="garuda-indonesia">
                                        </div>
                                        <hr class="mt-0 mb-2">
                                        <div class="city-code">
                                            <span>
                                                <p class="font-weight-bold">
                                                <i class="fas fa-plane mr-2"></i> 
                                                <% for (let a = 0; a < flight[i].airportId.length; a++) { %>
                                                    <% if (flight[i].airportId[a].category === 'departure') { %>
                                                        <%= flight[i].airportId[a].city %> ( <%= flight[i].airportId[a].code %> )
                                                    <% } %>
                                                <% } %>   
                                                    <span class="mx-4"> - </span> 
                                                    <span class="font-weight-bold">
                                                    <i class="fas fa-plane mr-2"></i>
                                                <% for (let a = 0; a < flight[i].airportId.length; a++) { %>
                                                    <% if (flight[i].airportId[a].category === 'arrival') { %>
                                                        <%= flight[i].airportId[a].city %> (<%= flight[i].airportId[a].code %> )
                                                    <% } %>
                                                <% } %>  
                                                    </span>
                                                </p>
                                            </span>
                                        </div>
                                        <div class="airport">
                                            <span>
                                                <p class="font-weight-normal">
                                                    <i class="fas fa-building text-primary mr-2"></i>
                                                    <% for (let a = 0; a < flight[i].airportId.length; a++) { %>
                                                        <% if (flight[i].airportId[a].category === 'departure') { %>
                                                            <%= flight[i].airportId[a].airport %>
                                                        <% } %>
                                                    <% } %>  
                                                    <span class="mx-4"> - </span> 
                                                    <span class="font-weight-normal">
                                                    <i class="fas fa-building text-primary mr-2"></i>
                                                        <% for (let a = 0; a < flight[i].airportId.length; a++) { %>
                                                            <% if (flight[i].airportId[a].category === 'arrival') { %>
                                                                <%= flight[i].airportId[a].airport %>
                                                            <% } %>
                                                        <% } %>  
                                                    </span>
                                                </p>
                                            </span>
                                        </div>
                                        <hr class="mt-0 mb-2">
                                        <div class="airport-info">
                                            <div class="row">
                                                <div class="col-3">
                                                    <p class="font-weight-normal"><i class="fas fa-check-square text-success mr-2"></i> Flight Number : <span class="font-weight-bold"><%= flight[i].flightNumber %></span></p>
                                                    <p class="font-weight-normal"><i class="fas fa-check-square text-success mr-2"></i> Duration : <span class="font-weight-bold"> <%= flight[i].duration %></span></p>
                                                </div>
                                                <div class="col-3">
                                                    <p class="font-weight-normal"><i class="fas fa-check-square text-success mr-2"></i> Type Class : <span class="font-weight-bold"><%= flight[i].flightClass %> </span></p>
                                                    <p class="font-weight-normal"><i class="fas fa-check-square text-success mr-2"></i> Flight Type : <span class="font-weight-bold"> <%= flight[i].flightType %> </span></p>
                                                </div>
                                                <div class="col-3">
                                                    <p class="font-weight-normal"><i class="fas fa-check-square text-success mr-2"></i> Capacity : <span class="font-weight-bold"> <%= flight[i].capacity %> Passangers </span></p>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
